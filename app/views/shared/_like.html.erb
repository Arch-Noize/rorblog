<% flash.each do |name, msg| -%>
  <%= content_tag :div, msg, class: name %>
<% end -%>
<%= form_with model: @like, url: user_post_likes_path(user_id: post.author_id, post_id: post.id), data: { turbo: false }, local: true, scope: :like do |f| %>
<div>
  <%= f.hidden_field :user_id, value: post.author_id %>
  <%= f.hidden_field :post_id, value: post.id %>
  <%= f.submit "Like this post" %>
</div>

<% end %>