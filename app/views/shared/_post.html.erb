<div class="post">
  <h3><%= post.title %> by <%= post.author.name %></h3>
  <p><%= post.text %></p>
  <% if can? :destroy, @post %>
    <%= button_to 'Delete Post', user_post_path(user_id: @post.author_id, id: @post.id), method: :delete, class: "button" %>
  <% end %>
  <p class="counter">
    Comments: <%= post.comments_counter %>, Likes: <%= post.likes_counter %>
  </p>
</div>